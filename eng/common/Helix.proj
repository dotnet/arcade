<Project InitialTargets="Debug">
  <Sdk Name="Microsoft.DotNet.Helix.Sdk" Version="1.0.0-prerelease-62823-01" />

  <PropertyGroup Condition="'$(Agent_JobStatus)' == 'Succeeded' Or '$(Agent_JobStatus)' == 'PartiallySucceeded'">
    <ErrorCount>0</ErrorCount>
    <WarningCount>0</WarningCount>
  </PropertyGroup>
  <PropertyGroup Condition="'$(Agent_JobStatus)' == 'Failed' Or '$(Agent_JobStatus)' == 'Canceled'">
    <ErrorCount>1</ErrorCount>
    <WarningCount>0</WarningCount>
  </PropertyGroup>
  <Target Name="Debug" Condition="'$(System_Debug)' == 'true'">
    <Message Text="ErrorCount: $(ErrorCount)" Importance="High"/>
    <Message Text="WarningCount: $(WarningCount)" Importance="High"/>
  </Target>
</Project>
