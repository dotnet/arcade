    <None Include="..\..\global.json" TargetPath="RepoScaffold\global.json" CopyToOutputDirectory="PreserveNewest" />
    <None Include="..\..\eng\common\SetupNugetSources.*" TargetPath="RepoScaffold\eng\common\%(Filename)%(Extension)" CopyToOutputDirectory="PreserveNewest" />
    <None Include="..\..\eng\common\pipeline-logging-functions.*" TargetPath="RepoScaffold\eng\common\%(Filename)%(Extension)" CopyToOutputDirectory="PreserveNewest" />
    <None Include="..\..\eng\common\tools.*" TargetPath="RepoScaffold\eng\common\%(Filename)%(Extension)" CopyToOutputDirectory="PreserveNewest" />
  </ItemGroup>

</Project>
