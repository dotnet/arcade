<Project>

  <PropertyGroup>
    <!--
      Set by Microsoft.Common.targets, some targets must be removed while others are left as standard extension mechanisms.

      We don't need to compile anything, but we want to still resolve project references to allow MSBuild extensions through PackageReferences.
    -->
    <CoreBuildDependsOn>
      BuildOnlySettings;
      PrepareForBuild;
      PreBuildEvent;
      ResolveReferences;
      PostBuildEvent
    </CoreBuildDependsOn>

    <PrepareForBuildDependsOn></PrepareForBuildDependsOn>

    <ResolveReferencesDependsOn>
      BeforeResolveReferences;
      AssignProjectConfiguration;
      ResolveProjectReferences;
      FindInvalidProjectReferences;
      AfterResolveReferences
    </ResolveReferencesDependsOn>

    <CleanDependsOn>
      BeforeClean;
      UnmanagedUnregistration;
      CoreClean;
      PrepareProjectReferences;
      CleanPublishFolder;
      AfterClean
    </CleanDependsOn>
  </PropertyGroup>

  <Target Name="PrepareForBuild"
          DependsOnTargets="$(PrepareForBuildDependsOn)" />

  <Target Name="Build"
          DependsOnTargets="$(BuildDependsOn)"/>

  <PropertyGroup>
    <TestDependsOn>
      Build;
      BeforeTest;
      CoreTest;
      AfterTest;
    </TestDependsOn>
  </PropertyGroup>

  <Target Name="BeforeTest"/>

  <Target Name="Test" DependsOnTargets="$(TestDependsOn)"/>

  <Target Name="AfterTest"/>

</Project>