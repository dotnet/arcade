<Project>

  <PropertyGroup>
    <DotNetPackageTestingAssembly>$(MSBuildThisFileDirectory)..\tools\net\Microsoft.DotNet.PackageTesting.dll</DotNetPackageTestingAssembly>
  </PropertyGroup>

  <UsingTask TaskName="GetCompatiblePackageTargetFrameworks" AssemblyFile="$(DotNetPackageTestingAssembly)" Runtime="NET" />
  <UsingTask TaskName="VerifyClosure" AssemblyFile="$(DotNetPackageTestingAssembly)" Runtime="NET" />
  <UsingTask TaskName="VerifyTypes" AssemblyFile="$(DotNetPackageTestingAssembly)" Runtime="NET" />

</Project>
