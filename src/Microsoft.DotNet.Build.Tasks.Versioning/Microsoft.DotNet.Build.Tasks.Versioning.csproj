<?xml version="1.0" encoding="utf-8"?>
<Project Sdk="RoslynTools.RepoToolset">

  <PropertyGroup>
    <TargetFrameworks>netcoreapp2.0;$(NetFxTfm)</TargetFrameworks>
    
    <IsPackable>true</IsPackable>
    <NuspecFile>$(MSBuildProjectName).nuspec</NuspecFile>
    <NuspecBasePath>$(MSBuildProjectDirectory)</NuspecBasePath>
    <NuspecProperties>NetFxTfm=$(NetFxTfm)</NuspecProperties>
  </PropertyGroup>

  <ItemGroup>
    <Reference Include="Microsoft.Build.Framework" Version="15.1.548" />
  </ItemGroup>

  <ItemGroup Condition="'$(TargetFramework)' == 'netcoreapp2.0'">
    <Reference Include="Microsoft.Build.Utilities.Core" Version="15.1.548" />
  </ItemGroup>

  <ItemGroup Condition="'$(TargetFramework)' == '$(NetFxTfm)'">
    <Reference Include="Microsoft.Build.Utilities.v4.0" />
    <Reference Include="System" />
    <Reference Include="System.Net.Http" />
    <Reference Include="System.Collections" />
    <Reference Include="System.Core" />
    <Reference Include="System.IO" />
    <Reference Include="System.IO.Compression" />
    <Reference Include="System.IO.Compression.FileSystem" />
    <Reference Include="System.Runtime" />
    <Reference Include="System.Xml" />
    <Reference Include="System.Xml.Linq" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Microsoft.DotNet.Build.Tasks.Util\Microsoft.DotNet.Build.Tasks.Util.csproj" />
  </ItemGroup>

  <ItemGroup>
    <None Update="targets\Versioning.props">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
    <None Update="targets\Versioning.targets">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
  </ItemGroup>

</Project>
