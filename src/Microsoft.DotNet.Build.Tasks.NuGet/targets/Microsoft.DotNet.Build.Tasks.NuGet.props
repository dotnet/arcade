<Project ToolsVersion="14.0" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
    <PropertyGroup>
        <_MicrosoftDotNetBuildTasksNuGetTaskAssembly Condition=" '$(MSBuildRuntimeType)' == 'Core' ">$(MSBuildThisFileDirectory)netstandard2.0\Microsoft.DotNet.Build.Tasks.NuGet.dll</_MicrosoftDotNetBuildTasksNuGetTaskAssembly>
        <_MicrosoftDotNetBuildTasksNuGetTaskAssembly Condition=" '$(MSBuildRuntimeType)' != 'Core' ">$(MSBuildThisFileDirectory)net461\Microsoft.DotNet.Build.Tasks.NuGet.dll</_MicrosoftDotNetBuildTasksNuGetTaskAssembly>
    </PropertyGroup>

    <UsingTask TaskName="Microsoft.DotNet.Build.Tasks.NuGet.PackNuSpec" AssemblyFile="$(_MicrosoftDotNetBuildTasksNuGetTaskAssembly)" />
</Project>
